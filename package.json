    "makemessages-nl": "formatjs extract 'src/archiefbeheercomponent/js/**/*.js' --format src/archiefbeheercomponent/js/i18n-formatter.js --out-file src/archiefbeheercomponent/js/lang/nl.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "makemessages": "npm run makemessages-nl && npm run makemessages-en",
    "compilemessages": "formatjs compile-folder --ast src/archiefbeheercomponent/js/lang src/archiefbeheercomponent/js/compiled-lang"
